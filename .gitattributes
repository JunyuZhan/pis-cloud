# 确保 shell 脚本使用 LF 行尾
*.sh text eol=lf

# 其他脚本文件也使用 LF
*.bash text eol=lf
*.zsh text eol=lf

# 配置文件使用 LF
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# 代码文件使用 LF
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Docker 文件使用 LF
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf

# 确保二进制文件不被 Git 修改
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
